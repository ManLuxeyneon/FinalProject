@model FinalProject.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register Page";
}

<form class="form" method="POST" action="/Home/Register">
    <p class="title">Register</p>
    <p class="message">Signup now and get full access to our app.</p>

    <div class="flex">
        <label>
            <input required placeholder="Firstname" type="text" class="input"  />
            <span>Firstname</span>
        </label>

        <label>
            <input required placeholder="Lastname" type="text" class="input"  />
            <span>Lastname</span>
        </label>
    </div>

    <label>
        <input required placeholder="Email" type="email" class="input" />
        <span>Email</span>
    </label>

    <label>
        <input required placeholder="Password" type="password" class="input" />
        <span>Password</span>
    </label>

    <label>
        <input required placeholder="Confirm password" type="password" class="input" />
        <span>Confirm password</span>
    </label>

    <button type="submit" class="submit">Submit</button>

    <p class="signin">Already have an account? <a href="@Url.Action("Login", "Home")">Login</a></p>
</form>